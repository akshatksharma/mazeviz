@tailwind base;
@tailwind components;
@tailwind utilities;

* {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
    Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
}

body,
html {
  margin: 0 0;
  box-sizing: content-box;
}

h1,
p {
  color: #fafafa;
}

.page {
  height: 100vh;
  display: grid;
  grid: [header] 100px [body] 1fr / [gutterL] 1fr [content] 8fr [gutterR] 1fr;
}

.center {
  grid-column: content;
}
